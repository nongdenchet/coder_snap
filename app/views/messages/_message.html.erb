<div class="card <%= message.class_for_card %>">
  <div class="card-content white-text">
    <span class="card-title">From: <%= message.sender.name %>, at: <%= message.create_time %></span>
    <p><%= message.short_content %></p>
  </div>
  <% unless message.seen %>
      <div class="card-action blue darken-2">
        <%= link_to 'Detail', message %>
      </div>
  <% end %>
</div>
