<div class="card <%= message.class_for_card %>">
  <div class="card-content white-text">
    <%= image_tag message.sender.avatar, class: 'circle', width: '50', height: '50' %>
    <span class="card-title" id="card-title">From: <%= message.sender.name %>, at: <%= message.create_time %></span>
    <p id="card-content"><%= message.short_content %></p>
  </div>
  <% unless message.seen %>
      <div class="card-action blue darken-2">
        <%= link_to 'Detail', message %>
      </div>
  <% end %>
</div>
