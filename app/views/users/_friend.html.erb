<div class="card green darken-1" id="friend-<%= user.id %>">
  <div class="card-content white-text">
    <%= image_tag user.avatar, class: 'circle', width: '50', height: '50' %>
    <span class="card-title" id="card-title"><%= user.name %></span>
    <p id="card-content"><%= user.description %></p>
  </div>
  <div class="card-action green darken-2">
    <%= link_to 'Unfriend', unfriend_user_path(user), method: :post, remote: true %>
    <%= link_to 'Block', block_user_path(user), method: :post, remote: true %>
  </div>
</div>